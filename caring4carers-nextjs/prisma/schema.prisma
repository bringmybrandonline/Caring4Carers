generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Booking {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String
  datePreference  String
  requirements    String?
  status          String   @default("pending") // pending, confirmed, paid, cancelled
  paymentStatus   String   @default("unpaid") // unpaid, paid, refunded
  stripeSessionId String?
  amount          Float?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("bookings")
}

model RetreatDate {
  id              String   @id @default(cuid())
  date            DateTime
  maxParticipants Int      @default(12)
  currentBookings Int      @default(0)
  price           Float    @default(85.0)
  location        String
  status          String   @default("active") // active, cancelled, full
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("retreat_dates")
}

model GiftCard {
  id              String   @id @default(cuid())
  code            String   @unique
  amount          Float
  status          String   @default("active") // active, redeemed, expired
  stripeSessionId String?
  purchaserEmail  String
  redeemedBy      String?
  redeemedAt      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("gift_cards")
}
